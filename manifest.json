{
  "manifest_version": 2,

  "name": "Eazy Reader",
  "description": "A tiny little widget that improves your online reading experience.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["eazy-reader.js"]
    }
  ],

  "permissions": ["activeTab"]
}
