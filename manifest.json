{
  "manifest_version": 2,

  "name": "Eazy Reader",
  "description": "A tiny little widget that improves your online reading experience.",
  "version": "1.0",

  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["eazy-reader.js"]
    }
  ]
}
